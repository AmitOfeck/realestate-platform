{
  "version": 2,
  "buildCommand": "cd packages/backend && cp .env.production .env && npm run build",
  "outputDirectory": "packages/backend/dist",
  "builds": [
    {
      "src": "packages/backend/dist/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "packages/backend/dist/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
