{
  "version": 2,
  "buildCommand": "yarn --cwd packages/backend install --production=false && yarn --cwd packages/backend build",
  "outputDirectory": "packages/backend/dist",
  "builds": [
    {
      "src": "packages/backend/dist/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "packages/backend/dist/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
